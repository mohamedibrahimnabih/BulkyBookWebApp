@model List<Category>

<div class="row pb-3">
    <div class="col-6">
        <h3>All Categories</h3>
    </div>

    <div class="col-6 text-end">
        <a asp-controller="Category" asp-action="Create" class="btn btn-dark"><i class="bi bi-plus-circle"></i> Create New Category</a>
    </div>
</div>

<div class="row">
    <table class="table table-hover">
        <thead>
            <tr class="table-dark">
                <th scope="col">Name</th>
                <th scope="col">Display Order</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>
                </tr>
            }

        </tbody>
    </table>
</div>